#!/usr/bin/make -f
# -*- makefile -*-

# Uncomment this to turn on verbose mode.
# export DH_VERBOSE=1

%:
	dh $@ 

DESTDIR=$(CURDIR)/debian/raceintospace

override_dh_auto_configure:
	aclocal -I m4
	autoconf
	./configure --prefix=/usr --bindir=$(DESTDIR)/usr/games

override_dh_auto_install:
	make DESTDIR=$(DESTDIR) install
